<Window x:Class="NetShield.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NetShield"
        mc:Ignorable="d"
        Title="MainWindow" Height="414" Width="810"
        Background='plum'
        MinHeight="414"
        MinWidth="810">
    <Window.Resources>
        <Color x:Key="Light">plum</Color>
        <Color x:Key="Dark">indigo</Color>
    </Window.Resources>


    <!--Menu Buttons-->
    <Grid>
        <!-- Sidebar -->
        <Grid x:Name="Sidebar1" RenderTransformOrigin="0.473,0.516" Margin="0,0,640,0" HorizontalAlignment="Left" Background="Indigo">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <!-- Menu Buttons -->


            <TextBlock Name="title" Text="NetShield" FontFamily="Harlow Solid Italic" FontSize="28" TextAlignment="Center" Height="34" Width="150" RenderTransformOrigin="0.5,0.5" Foreground="White" VerticalAlignment="Top" TextWrapping="Wrap"/>

            <Button Tag="menuButton" Content="Homepage" Background="indigo" Foreground="plum" Click="buttonClick1" Margin="0,48,0,0" MouseEnter="Button_MouseEnter" MouseLeave="Button_MouseLeave" Height="60" VerticalAlignment="Top" BorderThickness="0"/>

            <Button Tag="menuButton" Content="Network Scanner" Background="indigo" Foreground="plum" Click="buttonClick2" Margin="0,108,0,0" MouseEnter="Button_MouseEnter" MouseLeave="Button_MouseLeave" Height="60" VerticalAlignment="Top" BorderThickness="0"/>
            <Button Tag="menuButton" Content="Port Scan" Background="indigo" Foreground="plum" Click="buttonClick3" Margin="0,168,0,0" MouseEnter="Button_MouseEnter" MouseLeave="Button_MouseLeave" Height="60" VerticalAlignment="Top" BorderThickness="0"/>
            <Button Tag="menuButton" Content="Tips and Tricks" Background="indigo" Foreground="plum" Click="buttonClick4" Margin="0,228,0,0" MouseEnter="Button_MouseEnter" MouseLeave="Button_MouseLeave" Height="60" VerticalAlignment="Top" BorderThickness="0"/>
            <Button Tag="menuButton" Content="Settings" Background="indigo" Foreground="plum" Click="buttonClick5" Margin="0,288,0,0" MouseEnter="Button_MouseEnter" MouseLeave="Button_MouseLeave" Height="60" VerticalAlignment="Top" BorderThickness="0"/>
            <TextBlock Name="attribution" Text="Created my Morgan Trainor for the COMP3000: Computing Project" TextWrapping="Wrap" FontFamily="arial" FontSize="12" TextAlignment="Center" Height="48" Width="150" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,353,0,0" Foreground="White"/>
        </Grid>

        <!-- Main Content Area -->
        <Grid x:Name="mainBody" Margin="150,0,5,0">
            <!-- Add main content here -->
            <!-- Homepage -->
            <TextBlock Tag="homepage" x:Name="homepageTitle" Text="Welcome to Netshield" TextWrapping="Wrap" FontFamily="Arial Rounded MT Bold" FontSize="24" HorizontalAlignment="Center" TextAlignment="Center"  VerticalAlignment="Top" Margin="0,32,0,0" Height="61" Width="244"/>
            <TextBlock Tag="homepage" x:Name="homepageDescription" TextWrapping="Wrap" FontFamily="Arial Rounded MT Bold" FontSize="16" HorizontalAlignment="Center" TextAlignment="Center"  VerticalAlignment="Top" Margin="0,135,0,0" Height="194" Width="620"><Run Text="Welcome to NetShield! This program serves as a simple solution to the less tech-savvy individuals. Please select your desired option from the sidebar."/></TextBlock>

            <!-- Network Scan -->
            <ListBox Tag="networkScan" x:Name="listBox1" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Height="300" Margin="406,82,0,0" BorderBrush="#FF0040FF"/>
            <Button Tag="networkScan" Content="Show Devices on Network" Click="buttonListDevice" Grid.Column="0" Margin="222,147,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Background="Red" BorderBrush="#00707070"/>

            <!-- Tips and Tricks -->
            <TextBlock Tag="tipsTricks" x:Name="tipsTricksTitle" Text="ISM Practices" TextWrapping="Wrap" FontFamily="Arial Rounded MT Bold" FontSize="24" HorizontalAlignment="Center" TextAlignment="Center"  VerticalAlignment="Top" Margin="0,32,0,0" Height="61" Width="244"/>
            <ListBox Tag="tipsTricks" x:Name="listFirmware" Margin="222,82,34,52" MouseDoubleClick="listFirmware_MouseDoubleClick"/>
            <Button Tag="tipsTricks" x:Name="firmwareButton" Content="Get Firmware Versions" Click="firmwareButton_Click" Margin="52,217,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" />

            <!-- Settings -->
            <ToggleButton Tag="settings" x:Name="toggleSwitch" Content="Toggle Night Mode" Margin="75,105,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Checked="ToggleButton_Checked" Unchecked="ToggleButton_Unchecked"/>


            <Button Tag="menuButton" Content="?" Click="buttonClick1" Grid.Column="0" Margin="582,57,0,0" Width="24" Height="25" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Top"/>




            <TextBlock x:Name="testTextBlock" Text="Testing TextBlock" TextWrapping="Wrap" FontFamily="Arial Rounded MT Bold" FontSize="24" HorizontalAlignment="Left" TextAlignment="Center"  VerticalAlignment="Top" Margin="386,388,0,0" Height="36" Width="244"/>


        </Grid>
    </Grid>



</Window>
